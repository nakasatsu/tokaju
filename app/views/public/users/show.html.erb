<div class="container">
  <div class="row mb-5 mt-4">
    <% if @user == current_user %>
      <h3>マイページ</h3>
    <% else %>
      <h3><%= link_to @user.name, user_path(@user) %> <small>さんのページ</small></h3>
    <% end %>
    <div class="ml-auto">
      <% if @user == current_user && @user.name != "guestuser" %>
        <%= link_to favorites_user_path(@user), class: 'btn btn-outline-info btn-sm' do %>
          <i class="fas fa-heart"></i> お気に入り
        <% end %>
        <%= link_to edit_user_path(@user), class: 'btn btn-outline-info btn-sm' do %>
          <i class="fas fa-cog"></i> 登録情報変更
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div>
        <%= render 'public/users/user_info', user: @user %>
      </div>
    </div>
    <div class="col-md-8">
      <div>
        <%= render 'public/posts/index', posts: @posts %>
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>