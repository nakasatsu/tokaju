<div class="container">
  <div class="col-md-10 mx-auto">
    <h3 class="mb-5">お気に入りのレビュー</h3>
    <% if @posts == [] %>
      <p class="text-secondary text-center">お気に入りのレビューはありません。</p>
    <% end %>
    <%= render 'public/posts/index', posts: @posts %>
    <div class="d-flex justify-content-center py-4">
      <%= paginate @posts %>
    </div>
  </div>
</div>