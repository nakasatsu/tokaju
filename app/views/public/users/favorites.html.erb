<div class="container">
  <div class="col-md-10 mx-auto">
    <h3>お気に入りのレビュー</h3>
  </div>
  <div class="col-md-11 text-center mt-5">
    <% if @posts == [] %>
      <p class="text-secondary">お気に入りのレビューはありません。</p>
    <% end %>
  </div>
  <div class="col-md-10 mx-auto my-5">
    <%= render 'public/posts/index', posts: @posts %>
  </div>
  <div class="col-3 mx-auto my-3 pt-3">
    <%= paginate @posts %>
  </div>
</div>