<div class="container">
  <div class="row no-gutters">
    <div class="col-md-6 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">登録情報変更</h5>
      <div class="form-body p-4">
        <%= image_tag @user.get_profile_image(100, 100), class: 'mb-3' %>
        <%= form_with model: @user do |f| %>
          <%= f.label 'プロフィール画像' %><br>
          <%= f.file_field :profile_image, accept: "image/*" %>
          <div class="field mb-3 mt-4">
            <%= f.label 'メールアドレス' %><br>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="field mb-3">
            <%= f.label 'ユーザーネーム' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="field mb-3">
            <%= f.label '自己紹介' %><br>
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>
          <%= f.submit "保存する", class: 'btn btn-info mt-5' %>
        <% end %>
      </div>
    </div>
  </div>
</div>