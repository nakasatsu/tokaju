<% posts.each do |post| %>
<div class="card mb-3" style="max-width: 1080px;">
  <div class="row no-gutters">
    
    <div class="col-md-4">
      <%= link_to post_path(post.id) do %>
      <svg class="bd-placeholder-img" width="100%" height="250" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image"><title>Placeholder</title><rect width="100%" height="100%" fill="#868e96"/></svg>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to post_path(post.id) do %>
            <%= post.item_name %>
          <% end %>
        </h5>
        <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
        <p><%= render 'public/posts/rate', post: post %></p>
        <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
      </div>
    </div>
    
  </div>
</div>
<% end %>


<% posts.each do |post| %>
  <%= link_to post_path(post.id) do %>
    <%= image_tag post.get_image(200, 200) %>
    <%= post.item_name %>
  <% end %>
  <%= render 'public/posts/rate', post: post %>
<% end %>