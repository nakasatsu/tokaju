<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "Post" => "post", "Tag" => "tag" }) %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "で始まる" => "forward", "で終わる" => "backward", "を含む" => "partial" }) %>
    <%= f.submit '検索' %>
  <% end %>
<% end %>