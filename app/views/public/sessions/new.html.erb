<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0">会員ログイン</h5>
      <div class="form-body p-4">
        <div class="mx-auto text-center">
          <p></p>
        </div>
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'form-control' %>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="fas fa-lock"></i>
              </span>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: 'form-control' %>
          </div>
          <%= f.submit "ログイン", class: 'btn btn-block btn-info mt-5' %>
        <% end %>
        <div class="text-center text-muted mt-4">
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>