<% posts.each do |post| %>
<div class="card mb-3" style="max-width: 1080px;">
  <div class="row no-gutters">
    
    <div class="col-md-3">
      <%= link_to post_path(post.id) do %>
      <div class="bd-placeholder-img card-img-top">
        <%= image_tag post.get_image(200, 200) %>
      </div>
      <% end %>
    </div>
    <div class="col-md-9">
      <div class="card-header bg-transparent border-transparent">
        <div class="d-flex justify-content-between">
          <div><%= render 'public/posts/rate', post: post %></div>
          <p class="card-text text-right">
            <small class="text-muted">
              <%= post.created_at.strftime('%Y/%m/%d') %> |
              by <%= post.user.name %>
            </small>
          </p>
        </div>
      </div>
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to post_path(post.id) do %>
            <%= post.item_name %>
          <% end %>
        </h5>
        <p class="card-text"><%= post.review %></p>
        
        <p class="card-text">
          <div class="d-flex justify-content-between">
            <small>
              タグ：
              <% post.tags.each do |tag| %>
                <%= link_to tag.tag_name, search_path(content: tag.tag_name, model: "tag", method: "perfect"), class: 'mr-2' %>
              <% end %>
            </small>
            <small>コメント <%= render 'public/posts/comment_counter', post: post %></small>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>