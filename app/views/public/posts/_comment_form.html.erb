
<%= form_with model: [post, post_comment], class: "w-100" do |f| %>
  <div class="row">
    <div class="col-10">
      <div class="form-group">
        <%= f.text_area :comment, class: "form-control", placeholder: "コメントを入力" %>
      </div>
    </div>
    <div class="col-2 align-self-end">
      <div class="form-group">
        <%= button_tag type: "submit", class: "btn btn-info py-3 px-5" do %>
          <i class="fas fa-paper-plane"></i>
        <% end %>
      </div>
    </div>
 </div>
<% end %>


